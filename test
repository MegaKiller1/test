<button type="button" onclick="checkQuiz()">Перевірити</button>
<div id="result"></div>

<script>
function checkQuiz() {
    var total = 15; 
    var score = 0;
    for (var i = 1; i <= total; i++) {
        var q = document.getElementsByName('q' + i);
        for (var j = 0; j < q.length; j++) {
            if (q[j].checked && q[j].value == "1") {
                score++;
            }
        }
    }
    // Оцінка від 1 до 12
    var grade = Math.round(score / total * 12);
    if (grade < 1) grade = 1;
    document.getElementById('result').innerHTML = "Правильних відповідей: " + score + "/" + total + 
    "<br>Оцінка (1–12): " + grade;
}
</script>

